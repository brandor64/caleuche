{
  "name": "caleuche-vscode",
  "private": true,
  "publisher": "caleuche",
  "displayName": "caleuche-vscode",
  "description": "VS Code extension for Caleuche template files with syntax highlighting and sample preview.",
  "repository": "https://github.com/brandor64/caleuche",
  "license": "MIT",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "caleuche-template-csharp",
        "aliases": [
          "Caleuche C# Template"
        ],
        "extensions": [
          ".cs.template",
          ".cs.tmpl"
        ]
      },
      {
        "id": "caleuche-template-go",
        "aliases": [
          "Caleuche Go Template"
        ],
        "extensions": [
          ".go.template",
          ".go.tmpl"
        ]
      },
      {
        "id": "caleuche-template-js",
        "aliases": [
          "Caleuche JavaScript Template"
        ],
        "extensions": [
          ".js.template",
          ".js.tmpl"
        ]
      },
      {
        "id": "caleuche-template-python",
        "aliases": [
          "Caleuche Python Template"
        ],
        "extensions": [
          ".py.template",
          ".py.tmpl"
        ]
      },
      {
        "id": "caleuche-template-java",
        "aliases": [
          "Caleuche Java Template"
        ],
        "extensions": [
          ".java.template",
          ".java.tmpl"
        ]
      }
    ],
    "grammars": [
      {
        "language": "caleuche-template-csharp",
        "scopeName": "source.caleuche.cs",
        "path": "./syntaxes/csharp.tmLanguage.json"
      },
      {
        "language": "caleuche-template-go",
        "scopeName": "source.caleuche.go",
        "path": "./syntaxes/go.tmLanguage.json"
      },
      {
        "language": "caleuche-template-js",
        "scopeName": "source.caleuche.js",
        "path": "./syntaxes/js.tmLanguage.json"
      },
      {
        "language": "caleuche-template-python",
        "scopeName": "source.caleuche.py",
        "path": "./syntaxes/py.tmLanguage.json"
      },
      {
        "language": "caleuche-template-java",
        "scopeName": "source.caleuche.java",
        "path": "./syntaxes/java.tmLanguage.json"
      },
      {
        "path": "./syntaxes/injection.json",
        "scopeName": "caleuche.template-blocks",
        "injectTo": [
          "source.caleuche.cs",
          "source.caleuche.go",
          "source.caleuche.js",
          "source.caleuche.py",
          "source.caleuche.java"
        ]
      }
    ],
    "commands": [
      {
        "command": "caleuche.showPreview",
        "title": "Show Caleuche Template Preview"
      },
      {
        "command": "caleuche.showPreviewToSide",
        "title": "Show Caleuche Template Preview to Side"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "caleucheTemplateInputs",
          "title": "Caleuche Template Inputs",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "caleucheTemplateInputs": [
        {
          "type": "webview",
          "id": "caleucheTemplateInputs",
          "name": "Template Inputs",
          "icon": "$(edit)"
        }
      ]
    },
    "keybindings": [
      {
        "command": "caleuche.showPreview",
        "key": "f5",
        "when": "editorLangId =~ /^caleuche-template-/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn package",
    "build": "yarn run check-types && yarn lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "clean": "rimraf dist",
    "package": "yarn run check-types && yarn lint && node esbuild.js --production",
    "build-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn build-tests && yarn build && yarn lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write .",
    "vsce:build": "vsce package",
    "vsce:publish": "vsce publish --azure-credential",
    "test": "echo \"No tests are defined\""
  },
  "dependencies": {
    "@caleuche/core": "^0.4.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.3",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
